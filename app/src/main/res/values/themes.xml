<resources>

    <style name="Base.Theme.Chatterandroid" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Theme.Chatterandroid" parent="Base.Theme.Chatterandroid" />

    <style name="Theme.Text.SplashLogo" parent="Theme.Chatterandroid">
        <item name="android:textColor">@color/primary_8</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Theme.Text.FormTitle" parent="Theme.Chatterandroid">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Theme.Text.Link" parent="Theme.Chatterandroid">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Theme.Text.LinkItalic" parent="Theme.Chatterandroid">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat_medium_italic</item>
    </style>

    <style name="Theme.Button.Fill" parent="Theme.Chatterandroid">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
</resources>